@model List<AllUsersDto>

<div class="container-fluid pt-4 px-4">

    <div class="d-flex justify-content-between align-items-center">
        <h6 class="mb-0">Kullanıcılar</h6>
    </div>
    

    <div id="taskList" class="bg-secondary text-center rounded p-4 mt-4">
        @if (Model == null || Model.Count == 0)
        {
            <div class="alert alert-warning text-center" style="font-size: 1.2rem; padding: 20px; border-radius: 10px;">
                <strong>Kullanıcı bulunmuyor.</strong>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table text-start align-middle table-bordered table-hover mb-0">
                    <thead>
                        <tr class="text-white">
                            <th scope="col">Kullanıcı Adı</th>
                            <th scope="col">İsim</th>
                            <th scope="col">Soyisim</th>
                            <th scope="col">Email</th>
                            <th scope="col">Oluşturulma Tarihi</th>
                            <th scope="col">Rolü</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><a href="/user-details/@item.Id">@item.Username</a></td>
                                <td>@item.Firstname</td>
                                <td>@item.Lastname</td>
                                <td>@item.Email</td>
                                <td>@item.CreatedAt.ToString("dd MMMM yyyy")</td>
                                <td>@item.Role</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>